\"styled-radio-button\"\r\n            />\r\n            <label class=\"ps-1\">{{ category }}</label>\r\n          </div>\r\n        </div>\r\n      </aside>\r\n      <v-row class=\"justify-space-between col-9\">\r\n        <ProductComp class=\"col-lg-4 col-md-4 col-sm-5 col-12\" :card=\"product\" v-for=\"product in visibleProducts\"\r\n                     :key=\"product.id\"/>\r\n        <v-btn\r\n            class=\"radius-1 content-btn mt-4 w-100\"\r\n            color=\"purple\"\r\n            x-large\r\n            v-if=\"showMoreButton\"\r\n            @click=\"showMore\"\r\n        >\r\n          نمایش بیشتر\r\n        </v-btn>\r\n      </v-row>\r\n    </v-row>\r\n  </v-container>\r\n</template>\r\n\r\n\r\n<style lang=\"scss\" scoped>\r\n.styled-radio-button {\r\n  -webkit-appearance: none;\r\n  -moz-appearance: none;\r\n  appearance: none;\r\n\r\n  border-radius: 50%;\r\n  width: 18px;\r\n  height: 18px;\r\n\r\n  border: 3px solid #403D3B;\r\n  transition: 0.2s all linear;\r\n  margin-right: 7px;\r\n  cursor: pointer;\r\n\r\n  position: relative;\r\n  top: 3px;\r\n}\r\n\r\n.styled-radio-button:checked {\r\n  border-top-color: #F82826;\r\n  border-right-color: #ED0001;\r\n  border-bottom-color: #E50101;\r\n  border-left-color: #ED0001;\r\n}\r\n\r\n.styled-radio-button::before {\r\n  content: '';\r\n  position: absolute;\r\n  top: 50%;\r\n  left: 50%;\r\n  transform: translate(-50%, -50%);\r\n  width: 8px;\r\n  height: 8px;\r\n  transition: 0.2s all linear;\r\n  background-color: transparent;\r\n  border-radius: 50%;\r\n}\r\n\r\n.styled-radio-button:hover::before {\r\n  background-color: rgba(214,29,26,.5);\r\n}\r\n\r\n.styled-radio-button:checked::before {\r\n  background-color: rgba(214,29,26);\r\n}\r\n\r\n.styled-radio-button:checked::after {\r\n  content: '';\r\n  position: absolute;\r\n  top: -3px;\r\n  left: -3px;\r\n  width: calc(100% + 6px);\r\n  height: calc(100% + 6px);\r\n  border-radius: 50%;\r\n  box-shadow: inset 0px 0px 1px 1px #D73538;\r\n}\r\n\r\n</style>\r\n\r\n\r\n<script>\r\nimport ProductComp from \"@/components/ProductComp.vue\";\r\n\r\nexport default {\r\n  name: \"ProductsView\",\r\n  components: {ProductComp},\r\n  data() {\r\n    return {\r\n      visibleProductCount: 8,\r\n    };\r\n  },\r\n  computed: {\r\n    products() {\r\n      return this.$store.state.products;\r\n    },\r\n    visibleProducts() {\r\n      return this.products.slice(0, this.visibleProductCount);\r\n    },\r\n    showMoreButton() {\r\n      return this.visibleProductCount < this.products.length;\r\n    },\r\n    uniqueCategories() {\r\n      return this.$store.state.uniqueCategories\r\n    },\r\n  },\r\n  methods: {\r\n    showMore() {\r\n      this.visibleProductCount += 4;\r\n    },\r\n  },\r\n};\r\n</script>\r\n"]},"metadata":{},"sourceType":"module"}