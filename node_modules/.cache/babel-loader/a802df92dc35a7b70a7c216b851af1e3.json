{"ast":null,"code":"export default {\n  name: \"ProductDetailView\",\n\n  data() {\n    return {\n      showAlert: null\n    };\n  },\n\n  computed: {\n    selectedProduct() {\n      return this.$store.state.product;\n    }\n\n  },\n  methods: {\n    async addToCart() {\n      this.$store.commit('setCart', this.selectedProduct);\n      this.showAlert = true;\n      setTimeout(() => {\n        this.showAlert = false;\n      }, 1000);\n    },\n\n    makeRequest() {\n      this.$store.dispatch('getProduct', this.$route.params.id);\n    }\n\n  },\n\n  mounted() {\n    this.makeRequest();\n  }\n\n};","map":{"version":3,"mappings":"AAqFA;EACAA,yBADA;;EAEAC;IACA;MACAC;IADA;EAGA,CANA;;EAOAC;IACAC;MACA;IACA;;EAHA,CAPA;EAYAC;IACA;MACA;MACA;MACAC;QACA;MACA,CAFA,EAEA,IAFA;IAGA,CAPA;;IAQAC;MACA;IACA;;EAVA,CAZA;;EAwBAC;IACA;EACA;;AA1BA","names":["name","data","showAlert","computed","selectedProduct","methods","setTimeout","makeRequest","mounted"],"sourceRoot":"src/views","sources":["ProductDetailView.vue"],"sourcesContent":["<template>\r\n  <v-container>\r\n    <div class=\"w-100 d-flex justify-end mt-9\">\r\n      <router-link class=\"product-detail-link text-center\" to=\"\" @click.native=\"goBack\"> بازگشت\r\n        <v-icon\r\n            dark\r\n            right\r\n            class=\"pl-3\"\r\n            color=\"black\"\r\n        >\r\n          mdi-chevron-left\r\n        </v-icon>\r\n      </router-link>\r\n    </div>\r\n    <v-card\r\n        class=\"mx-auto my-12\"\r\n    >\r\n      <v-img\r\n          :src=\"selectedProduct.image\"\r\n          class=\"product-image mx-auto\"\r\n      ></v-img>\r\n      <v-card-title>{{ selectedProduct.title }}</v-card-title>\r\n\r\n      <v-card-text>\r\n        <v-row\r\n            align=\"center\"\r\n            class=\"mx-0\"\r\n        >\r\n          <v-rating\r\n              :value=\"selectedProduct.rating.rate\"\r\n              color=\"amber\"\r\n              dense\r\n              half-increments\r\n              readonly\r\n              size=\"14\"\r\n          ></v-rating>\r\n\r\n          <div class=\"grey--text ms-4\">\r\n            {{ selectedProduct.rating.rate }} ({{ selectedProduct.rating.count }})\r\n          </div>\r\n        </v-row>\r\n\r\n        <div class=\"my-4 text-subtitle-1\">\r\n          {{ selectedProduct.category }}\r\n        </div>\r\n\r\n        <div>{{ selectedProduct.description }}</div>\r\n      </v-card-text>\r\n\r\n      <v-divider class=\"mx-4\"></v-divider>\r\n\r\n      <v-card-title>${{ selectedProduct.price }}</v-card-title>\r\n      <v-card-actions>\r\n        <v-btn\r\n            @click=\"addToCart\"\r\n            x-large\r\n            class=\"w-100\"\r\n            color=\"purple white--text\"\r\n        >\r\n          افزودن به سبد\r\n        </v-btn>\r\n      </v-card-actions>\r\n      <v-alert\r\n          transition=\"scale-transition\"\r\n          color=\"green\"\r\n          type=\"success\"\r\n          v-if=\"showAlert\"\r\n      >با موفقیت به سبد خرید اضافه شد</v-alert>\r\n    </v-card>\r\n  </v-container>\r\n</template>\r\n\r\n<style scoped lang=\"scss\">\r\n.product-detail-link {\r\n  color: black;\r\n}\r\n@media only screen and (min-width: 500px) {\r\n  .product-image {\r\n    width: 40%;\r\n  }\r\n}\r\n</style>\r\n\r\n<script>\r\n\r\nexport default {\r\n  name: \"ProductDetailView\",\r\n  data(){\r\n    return{\r\n    showAlert:null,\r\n    }\r\n  },\r\n  computed: {\r\n    selectedProduct() {\r\n      return this.$store.state.product\r\n    },\r\n  },\r\n  methods:{\r\n    async addToCart(){\r\n      this.$store.commit('setCart',this.selectedProduct);\r\n      this.showAlert = true;\r\n      setTimeout(() => {\r\n        this.showAlert = false;\r\n      }, 1000);\r\n    },\r\n    makeRequest(){\r\n      this.$store.dispatch('getProduct',this.$route.params.id)\r\n    },\r\n  },\r\n  mounted() {\r\n   this.makeRequest();\r\n  }\r\n}\r\n</script>"]},"metadata":{},"sourceType":"module"}