}}</p>\r\n        <p>هزینه: {{ product.price }}</p>\r\n        <p>محبوبیت: {{ product.popularity }}</p>\r\n      </div>\r\n    </div>\r\n    <button v-if=\"showMoreButton\" @click=\"showMore\" class=\"show-more-button\">نمایش بیشتر</button>\r\n  </div>\r\n    <div class=\"custom-select\">\r\n      <select>\r\n        <option value=\"option1\">Option 1</option>\r\n        <option value=\"option2\">Option 2</option>\r\n        <option value=\"option3\">Option 3</option>\r\n      </select>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      allProducts: [\r\n        { id: 1, name: 'محصول 1', category: 'الکترونیک', price: 100, popularity: 4 },\r\n        { id: 2, name: 'محصول 2', category: 'لباس', price: 50, popularity: 5 },\r\n        // ... تا محصول 20\r\n      ],\r\n      visibleProductCount: 3, // تعداد محصولاتی که در ابتدا نمایش داده می‌شوند\r\n      sortByPrice: '', // جهت مرتب سازی بر اساس هزینه (asc یا desc)\r\n      selectedCategory: '', // دسته‌بندی انتخاب شده\r\n    };\r\n  },\r\n  computed: {\r\n    visibleProducts() {\r\n      return this.allProducts.slice(0, this.visibleProductCount);\r\n    },\r\n    showMoreButton() {\r\n      return this.visibleProductCount < this.allProducts.length;\r\n    },\r\n    uniqueCategories() {\r\n      // با استفاده از Set به منظور انتخاب دسته‌بندی‌های یکتا\r\n      return Array.from(new Set(this.allProducts.map(product => product.category)));\r\n    },\r\n    filteredProducts() {\r\n      let filtered = this.allProducts;\r\n\r\n      // فیلتر بر اساس هزینه\r\n      if (this.sortByPrice === 'asc') {\r\n        filtered = filtered.sort((a, b) => a.price - b.price);\r\n      } else if (this.sortByPrice === 'desc') {\r\n        filtered = filtered.sort((a, b) => b.price - a.price);\r\n      }\r\n    else if (this.sortByPrice === 'pop') {\r\n        filtered = filtered.sort((a, b) => b.popularity - a.popularity);\r\n      }\r\n    else if (this.sortByPrice === 'def'){\r\n      filtered = ''\r\n      }\r\n\r\n      // فیلتر بر اساس دسته بندی\r\n      if (this.selectedCategory !== '') {\r\n        filtered = filtered.filter(product => product.category === this.selectedCategory);\r\n      }\r\n      return filtered.slice(0, this.visibleProductCount);\r\n    },\r\n  },\r\n  methods: {\r\n    showMore() {\r\n      this.visibleProductCount += 3; // یا هر تعداد دلخواه دیگری\r\n    },\r\n  },\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.custom-select {\r\n  position: relative;\r\n  display: inline-block;\r\n  width: 200px;\r\n  height: 40px;\r\n  background-color: #f1f1f1;\r\n  border-radius: 5px;\r\n  overflow: hidden;\r\n  font-family: Arial, sans-serif;\r\n}\r\n.custom-select select {\r\n  width: 100%;\r\n  height: 100%;\r\n  padding: 10px;\r\n  appearance: none;\r\n  border: none;\r\n  background-color: transparent;\r\n  cursor: pointer;\r\n  font-size: 16px;\r\n  color: #555;\r\n}\r\n/* Style for options */\r\n.custom-select select option {\r\n  padding: 10px;\r\n  background-color: #f9f9f9;\r\n  color: #333;\r\n  font-size: 16px;\r\n  border: none;\r\n  transition: background-color 0.3s ease;\r\n}\r\n.custom-select select option:hover {\r\n  background-color: #e0e0e0;\r\n}\r\n/* Style for selected option */\r\n.custom-select::after {\r\n  content: \"\\25BC\";\r\n  position: absolute;\r\n  top: 50%;\r\n  right: 10px;\r\n  transform: translateY(-50%);\r\n  color: #555;\r\n}\r\n.product-card {\r\n  border: 1px solid #ccc;\r\n  padding: 10px;\r\n  margin-bottom: 10px;\r\n  border-radius: 5px;\r\n}\r\n\r\n.show-more-button {\r\n  background-color: #3498db;\r\n  color: #ffffff;\r\n  padding: 10px 20px;\r\n  font-size: 16px;\r\n  border: none;\r\n  border-radius: 5px;\r\n  cursor: pointer;\r\n  transition: background-color 0.3s;\r\n}\r\n\r\n.show-more-button:hover {\r\n  background-color: #2980b9;\r\n}\r\n\r\n.filters {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.filters label {\r\n  margin-right: 10px;\r\n}\r\n\r\n.filters div {\r\n  margin-bottom: 5px;\r\n}\r\n\r\n.filters input {\r\n  margin-right: 5px;\r\n}\r\n.select-wrapper {\r\n  position: relative;\r\n  width: 200px;\r\n}\r\n\r\n.select-wrapper select {\r\n  width: 100%;\r\n  padding: 10px;\r\n  font-size: 16px;\r\n  border: 1px solid #ccc;\r\n  border-radius: 5px;\r\n  appearance: none; /* حذف استایل دیفالت المان select */\r\n}\r\n\r\n.select-wrapper::after {\r\n  content: \"\\25BC\"; /* نماد فلش پایین */\r\n  font-size: 16px;\r\n  color: #555;\r\n  position: absolute;\r\n  top: 50%;\r\n  right: 10px;\r\n  transform: translateY(-50%);\r\n}\r\n\r\n/* استایل‌های مربوط به المان option */\r\n.select-wrapper select option {\r\n  padding: 10px;\r\n}\r\n\r\n/* استایل های هوور (hover) */\r\n.select-wrapper select:hover {\r\n  border-color: #999;\r\n}\r\n\r\n.select-wrapper select:hover + .custom-arrow::after {\r\n  color: #333;\r\n}\r\n</style>\r\n"]},"metadata":{},"sourceType":"module"}